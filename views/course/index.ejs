<!DOCTYPE html>
<html lang="en">
<head>
  <title></title>
  <meta charset="utf-8">
  <meta name="viewport" content="width=device-width, initial-scale=1">
  <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/4.3.1/css/bootstrap.min.css">
  <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.4.1/jquery.min.js"></script>
  <script src="https://cdnjs.cloudflare.com/ajax/libs/popper.js/1.14.7/umd/popper.min.js"></script>
  <script src="https://maxcdn.bootstrapcdn.com/bootstrap/4.3.1/js/bootstrap.min.js"></script>
</head>
<body>

<div class="container">
  <h2>Courses List</h2>
  <a href="/course/create" class="btn btn-sm btn-primary">Add Course</a><br/><br/>
  <table class="table table-dark table-striped">
    <thead>
      <tr>
        <th>Id</th>
        <th>Name</th>
        <th>Duration</th>
        <th>Fees</th>
        <th>Action</th>
      </tr>
    </thead>
    <tbody>
        <% if(fetchData.length){
   
        for(var i = 0; i< fetchData.length; i++) {%>  
        <tr>
          <td><%= (i+1) %></td>
          <td><%= fetchData[i].name%></td>
          <td><%= fetchData[i].duration%></td>
          <td><%= fetchData[i].fees%></td>
          <td><a class="btn btn-info" href="/course/<%= fetchData[i].id %>/edit/">Edit</a>
            <form class='btn' action='/course/<%=fetchData[i].id%>' method='POST'>
                <button class='btn btn-danger' >Delete</button>
           </form>
          </td>
        </tr>
        <% }
                 
         }else{ %>
             <tr>
                <td colspan="3">No user</td>
             </tr>
          <% } %>  
    </tbody>
  </table>
</div>

</body>
</html>